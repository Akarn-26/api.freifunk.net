{
    "schema":{
        "$id": "https://freifunk.net/api-json-schema.json",
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "description": "Freifunk Community API X.X.X",
        "type": "object",
        "definitions": {
            "$comment": "Defining few fields to reuse in schema or subschema to improve modularity in the schema",

            "city": {
                "$id": "#city",
                "title": "City",
                "type": "string",
                "description": "Name of the city"
            },

            "country": {
                "$id": "#country",
                "title": "Country",
                "type": "string",
                "description": "Your conuntry, list has been taken from http://countrylist.net/de/",
                "enum": ["", "AF","AX","AL","DZ","AS","AD","AO","AI","AQ","AG","AR","AM","AW","AC","AU","AT","AZ","BS","BH","BD","BB","BY","BE","BZ","BJ","BM","BT","BO","BA","BW","BV","BR","IO","BN","BG","BF","BI","KH","CM","CA","IC","CV","KY","CF","TD","CL","CN","CX","CC","CO","KM","CG","CD","CK","CR","CI","HR","CU","CY","CZ","DK","DG","DJ","DM","DO","EC","EG","SV","GQ","ER","EE","ET","EU","FK","FO","FJ","FI","FR","GF","PF","TF","GA","GM","GE","DE","GH","GI","GR","GL","GD","GP","GU","GT","GG","GN","GW","GY","HT","HM","VA","HN","HK","HU","IS","IN","ID","IR","IQ","IE","IM","IL","IT","JM","JP","JE","JO","KZ","KE","KI","KP","KR","KW","KG","LA","LV","LB","LS","LR","LY","LI","LT","LU","MO","MK","MG","MW","MY","MV","ML","MT","MH","MQ","MR","MU","YT","MX","FM","MD","MC","MN","ME","MS","MA","MZ","MM","NA","NR","NP","NL","AN","NC","NZ","NI","NE","NG","NU","NF","MP","NO","OM","PK","PW","PS","PA","PG","PY","PE","PH","PN","PL","PT","PR","QA","RE","RO","RU","RW","SH","KN","LC","PM","VC","WS","SM","ST","SA","NT","SN","CS","SC","SL","SG","SK","SI","SB","SO","ZA","GS","SU","ES","LK","SD","SR","SJ","SZ","SE","CH","SY","TW","TJ","TZ","TH","TL","TG","TK","TO","TT","TA","TN","TR","TM","TC","TV","UG","UA","AE","GB","US","UY","UZ","VU","VE","VN","VG","VI","WF","EH","YE","ZM","ZW"]
            },

            "address": {
                "$id": "#address",
                "type":"object",
                "description": "The address of the place you meet",
                "properties": {
                    "name": {
                        "title": "Name of your place",
                        "type": "string",
                        "description": "The name of the place you meet"
                    },
                    "street": {
                        "title": "Street",
                        "type": "string",
                        "description": "The street address of your meeting place"
                    },
                    "zipcode": {
                        "title": "ZIP",
                        "type": "string",
                        "description": "The zip code of your meeting place"
                    }
                }
            },

            "lat" :{
                "$id": "#lat",
                "title": "Latitude",
                "type": "string",
                "description": "Lattitude of your city in decimal degrees"
            },

            "lon" :{
                "$id": "#lon",
                "title": "Longitude",
                "type": "string",
                "description": "Longitude of your city in decimal degrees"
            },

            "email" :{
                "$comment": "While using email field add description to it",
                "$id": "#email",
                "title": "Email",
                "type": "string",
				"pattern": "^[A-Za-z0-9äöüÄÖUß_\\-\\.]+@[A-Za-z0-9äöüÄÖUß_\\-\\.]+\\.[A-Za-z]{2,}$",
            }
        },
        
        "properties": {
            "api": {
                "title": "API",
                "type": "string",
                "description": "The Freifunk Community API version you use",
                "enum": ["0.1", "0.2.0", "0.2.1", "0.3.0", "0.3.1", "0.3.2", "0.4.0", "0.4.1", "0.4.2", "0.4.3", "0.4.4", "0.4.5", "0.4.6", "0.4.7", "0.4.8", "0.4.9", "0.4.10", "0.4.11", "0.4.12", "0.4.13", "0.4.14", "0.4.15", "0.4.16", "X.X.X"],
                "default": "X.X.X"
            },
            "name": {
                "title": "Name",
                "type": "string",
                "description": "The name of your community"
            },
            "metacommunity": {
                "title": "Metacommunity",
                "type": "string",
                "description": "The name of your metacommunity, if your local community belongs to a bigger one"
            },
            "location": {
                "title": "Primary Location",
                "type": "object",
                "description": "Position data such as postal address or geographical location",
                "properties": {
                    "city": { "$ref": "#city" },
                    "country": { "$ref": "#country" },
                    "address": { "$ref": "#address" },
                    "lat": { "$ref": "#lat" },
                    "lon": { "$ref": "#lon" },
                    "additionalLocations": {
                        "title": "Additional Locations",
                        "type": "array",
                        "description": "Add some more locations where your community is active",
                        "items": {
                            "type": "object",
                            "properties": {
                                "city": { "$ref": "#city" },
                                "country": { "$ref": "#country" },
                                "address": { "$ref": "#address" },
                                "lat": { "$ref": "#lat" },
                                "lon": { "$ref": "#lon" }
                            },
                            "required": ["city", "lat", "lon" ]
                        }
                    }
                },
                "required": ["city", "lat", "lon" ]
            }
        },
        "required": ["api", "name", "location" ]
    }
}